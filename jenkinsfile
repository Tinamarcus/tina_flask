pipeline {
    agent any
    // environment {
    //     DOCKER_REGISTRY = "tinamarcus"
    //     DOCKER_IMAGE_NAME = "flask-app"
    //     DOCKER_IMAGE_TAG = "v1"
    // }
    stages {
        stage('git clone') {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/Tinamarcus/tina_flask.git'
                }
            }
        }
        stage('Build Docker image') {
            steps {
                script {
                    sh """
                    cd /var/lib/jenkins/workspace/flask
                    sudo docker build -t tinamarcus/flaskapp:v1 .
                    """
                }
            }
        }
        stage('Docker Login') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'DOCKER_PASSWORD', username: 'DOCKER_tinamarcus')]) {
                        sh "echo '${DOCKER_PASSWORD}' | sudo docker login -u 'tinamarcus' --password-stdin"
                        echo 'Successfully logged into Docker Hub'
                    }
                }
            }
        }
        stage('Push Docker image') {
            steps {
                script {
                    sh """
                    sudo docker push tinamarcus/flaskapp:v1
                    """
                }
            }
        }
        stage('Deploy Docker image with Ansible') {
            steps {
                script {
                   ansiblePlaybook credentialsId: 'ssh', disableHostKeyChecking: true, installation: 'ansible', inventory: 'host.ini', playbook: 'play.yml'
                }
            }
        }
    }

}